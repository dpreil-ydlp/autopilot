{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Plan DAG",
  "type": "object",
  "additionalProperties": false,
  "required": ["tasks"],
  "properties": {
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "id",
          "title",
          "description",
          "goal",
          "acceptance_criteria",
          "allowed_paths",
          "validation_commands",
          "depends_on",
          "suggested_claude_skills",
          "suggested_mcp_servers",
          "suggested_subagents",
          "estimated_complexity"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "Unique task identifier"
          },
          "title": {
            "type": "string",
            "description": "Task title"
          },
          "description": {
            "type": "string",
            "description": "Detailed task description"
          },
          "goal": {
            "type": "string",
            "description": "Specific goal for this task"
          },
          "acceptance_criteria": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Checklist defining done"
          },
          "allowed_paths": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Allowed path prefixes for this task"
          },
          "validation_commands": {
            "type": "object",
            "additionalProperties": false,
            "required": ["tests", "lint", "format", "uat"],
            "properties": {
              "tests": {
                "type": ["string", "null"],
                "description": "Optional tests command override"
              },
              "lint": {
                "type": ["string", "null"],
                "description": "Optional lint command override"
              },
              "format": {
                "type": ["string", "null"],
                "description": "Optional format command override"
              },
              "uat": {
                "type": ["string", "null"],
                "description": "Optional UAT command override"
              }
            }
          },
          "depends_on": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of task IDs this task depends on"
          },
          "suggested_claude_skills": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Recommended Claude Code skills for this task"
          },
          "suggested_mcp_servers": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Recommended MCP servers for this task"
          },
          "suggested_subagents": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Recommended subagents for this task"
          },
          "estimated_complexity": {
            "type": "string",
            "enum": ["low", "medium", "high", "critical"],
            "description": "Estimated task complexity"
          }
        }
      },
      "description": "List of all tasks in the DAG"
    }
  }
}
